{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist/js",
        "lib": [
            "es6",
            "dom"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}